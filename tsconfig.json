{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,  // Disabled strict mode to avoid type errors
    "noImplicitAny": false,  // Allows variables without explicit types
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],  // Ensure Node.js types are included
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,  // Prevents casing-related errors
    // "suppressImplicitAnyIndexErrors": true  // Ignores implicit 'any' errors
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
